//bridge-file-version: #397
{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
      "properties": {
        "bridge:block_rotation": [2, 3, 4, 5]
      },
      "identifier": "mrleefy:creeperspawner"
    },
    "permutations": [
      {
        "condition": "query.block_property('bridge:block_rotation') == 2",
        "components": {
          "minecraft:rotation": [0, 180, 0]
        }
      },
      {
        "condition": "query.block_property('bridge:block_rotation') == 3",
        "components": {
          "minecraft:rotation": [0, 0, 0]
        }
      },
      {
        "condition": "query.block_property('bridge:block_rotation') == 4",
        "components": {
          "minecraft:rotation": [0, 270, 0]
        }
      },
      {
        "condition": "query.block_property('bridge:block_rotation') == 5",
        "components": {
          "minecraft:rotation": [0, 90, 0]
        }
      }
    ],
    "components": {
      "minecraft:on_player_placing": {
        "event": "bridge:update_rotation"
      },
      "minecraft:material_instances": {
        "*": {
          "render_method": "alpha_test",
          "texture": "creeperspawner"
        }
      },
      "minecraft:geometry": "geometry.mrleefy",
      "minecraft:destroy_time": 1,
      "minecraft:explosion_resistance": 1,
      "minecraft:map_color": "#B000CF",
      "minecraft:pick_collision": {
        "origin": [-8, 0, -8],
        "size": [16, 16, 16]
      },
      "minecraft:entity_collision": {
        "origin": [-8, 0, -8],
        "size": [16, 16, 16]
      },
      "minecraft:block_light_emission": 0.1,
      "minecraft:ticking": {
        "looping": true,
        "on_tick": {
          "event": "spawn",
          "target": "self"
        },
        "range": [78, 90]
      },
      "minecraft:on_interact": {
        "event": "interact",
        "target": "self"
      },
      "minecraft:on_player_destroyed": {
        "event": "sounds"
      },
      "minecraft:creative_category": {
        "group": "itemGroup.name.Construction",
        "category": "construction"
      }
    },
    "events": {
      "bridge:update_rotation": {
        "set_block_property": {
          "bridge:block_rotation": "query.cardinal_facing_2d"
        }
      },
      "interact": {
        "sequence": [
          {
            "condition": "query.get_equipped_item_name == 'creeperspawner'",
            "decrement_stack": {
              "ignore_game_mode": true
            },
            "run_command": {
              "command": [
                "tellraw @a[r=6] {\"rawtext\": [{\"text\": \"§6Spawner Speed Now Level 2!§a\"}]}",
                "playsound random.levelup @p[r=3] ~~~ 1 1 1",
                "particle minecraft:basic_flame_particle ~~~"
              ],
              "target": "self"
            },
            "set_block": {
              "block_type": "mrleefy:creeperspawner2"
            }
          },
          {
            "condition": "query.get_equipped_item_name == ''",
            "run_command": {
              "command": [
                "tellraw @a[r=6] {\"rawtext\": [{\"text\": \"§6Spawner Lvl: §51§r\\nSpawner type = §5creeper\\n§bKill a mob to see Qty§a\"}]}",
                "particle minecraft:basic_flame_particle ~~~",
                "playsound mob.creeper.breathe @a ~~~ 1 1 1"
              ],
              "target": "self"
            }
          }
        ]
      },
      "spawn": {
        "randomize": [
          {
            "run_command": {
              "command": ["function entities/creeper/creeperspawner"],
              "target": "self"
            }
          }
        ]
      },
      "sounds": {
        "run_command": {
          "command": [
            "playsound random.break @a[r=3] ~~~ 1 1 1",
            "function killspawnrule"
          ],
          "target": "self"
        }
      }
    }
  }
}
